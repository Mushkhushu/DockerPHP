<?xml version="1.0"?>
<ruleset name="CustomStandard">
    <!-- Définir les règles de sniffs -->
    <file>./</file> <!-- Cela indique à PHP_CodeSniffer de scanner tous les fichiers -->
    <exclude-pattern>*/vendor/*</exclude-pattern> <!-- Exclure le dossier vendor -->

    <!-- Spécifier des sniffs standards à utiliser -->
    <rule ref="PSR12" />
</ruleset>
